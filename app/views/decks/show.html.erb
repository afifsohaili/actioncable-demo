<div class="row">
  <div class="col s9">
    <div class="panel" id="slide-placeholder">
      <%= render "decks/demo/#{deck.current_slide_partial}" %>
    </div>
  </div>
  <div id="#chat" class="col s3 white z-depth-1">
    <div id="chat-placeholder">
      <div class="col s12">
      <% deck.chats.each do |chat| %>
        <%= render "chat", chat: chat %>
      <% end %>
      </div>
    </div>
    <form action="">
      <div class="row">
        <div class="input-field col s12">
          <input id="message" type="text" name="message">
          <label for="message">Chat message</label>
        </div>
      </div>
    </form>
  </div>
  <input type="hidden" value="<%= deck.current_slide_position %>" id="slide-id">
</div>
<% if deck_owner? %>
  <div class="sticky bottom">
    <a id="next" class="action right waves-effect waves-light" href="#" data-deck-id="<%= deck.id %>">
      <i class="material-icons">keyboard_arrow_right</i>
    </a>
    <a id="prev" class="action left waves-effect waves-light" href="#" data-deck-id="<%= deck.id %>">
      <i class="material-icons">keyboard_arrow_left</i>
    </a>
  </div>
<% end %>
